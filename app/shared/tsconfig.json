{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es6",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": ["./src"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/*"]
    },
    "pretty": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../dist-client",
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["../../node_modules", "**/*.spec.ts"]
}
